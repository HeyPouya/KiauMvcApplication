@model KiauMvcApplication.Models.UserTb
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ثبت نام</title>
    <link rel="stylesheet" href="../css/style.css">
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="vid-container">
            <video id="Video1" class="bgvid back" autoplay="false" muted="muted" preload="auto" loop>
                <source src="../../Content/video/a.mp4" type="video/mp4">
            </video>
            <div class="inner-container">
                <video id="Video2" class="bgvid inner" autoplay="false" muted="muted" preload="auto" loop>
                    <source src="../../video/Content/a.mp4" type="video/mp4">
                </video>
                <div class="box">
                    <h1>فرم ثبت نام</h1>
                    <input type="text" name="uFName" id="uFName" placeholder="نام " />
                    <input type="text" name="uLName" id="uLName" placeholder="نام خانوادگی" />
                    <input type="text" name="uEmail" id="uEmail" placeholder="پست الکترونیک" />
                    <input type="password" name="uPass" id="uPass" placeholder="کلمه عبور" />
                    <button type="submit" id="submit1">ثبت نام</button>
                </div>
            </div>
        </div>
    }
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="js/index.js"></script>

</body>
</html>
