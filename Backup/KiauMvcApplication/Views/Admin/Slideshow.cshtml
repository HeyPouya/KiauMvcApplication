@using System.Security.Cryptography
@model KiauMvcApplication.Models.SlideShowTb
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ارسال بنر اسلاید شو</title>
    <link href="~/Content/css/cms.css" rel="stylesheet" />
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm("Slideshow", "admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="sendbox">
            <h3>اسلاید شو</h3>
            <p class="lbl">کاربر محترم عکس باید در سایز px 1600*900 باشد</p>
            <div class="editor-label">
                <span>تیتر مورد نظر عکس :</span>
                @*@Html.LabelFor(model => model.SlideshowTitle)*@
            </div>
            <br />

            <div class="editor-field">
                @Html.TextBoxFor(x => x.SlideShowTitle)
                @Html.ValidationMessageFor(model => model.SlideShowTitle)
            </div>
            <br />
            <div class="editor-label">
                <span>با کلیک روی دکمه Browse یا Choose file عکس مورد نظر خود را انتخاب کنید</span>
            </div>
            <br />
            <div class="editor-field">
                <input class="fileupload" type="file" name="slideshow" value=" " />
                @Html.ValidationMessageFor(model => model.SlideShowPhotoUrl)
            </div>
            <br />
            <p>
                <input class="sendsubmit" type="submit" value="ارسال" />
            </p>
            <br />
            @ViewBag.message
            <br />
            <div class="panelButton">
                @Html.ActionLink("بازگشت به پنل مدیریت", "Panel")
            </div>
        </div>

    }
</body>
</html>
